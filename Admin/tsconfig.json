{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ✅ change from "bundler" to "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // ✅ ensure absolute paths work
    "paths": {
      "@/*": [
        "src/*"
      ] // ✅ will match your "@/..." imports
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // ✅ include JS if you use allowJs
    "**/*.jsx", // ✅ include JSX files
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}